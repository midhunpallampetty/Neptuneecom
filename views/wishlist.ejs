    <script>
      function removeItemsFromWishlist(){
  const removeFromWishlistLinks = document.querySelectorAll('.remove-from-wishlist');

  removeFromWishlistLinks.forEach(link => {
  link.addEventListener('click', async function(event) {
    event.preventDefault(); // Prevent the default link behavior

    const productId = link.getAttribute('data-id');

    // Show a SweetAlert confirmation dialog for "Remove from Wishlist" links
    await Swal.fire({
      title: 'Remove from Wishlist',
      text: 'Are you sure you want to remove this product from your wishlist?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Yes, remove it',
      cancelButtonText: 'Cancel',
    })
    .then(async (result) => {
      if (result.isConfirmed) {
        // Send an AJAX request to remove the product from the wishlist
        try {
          const response = await fetch(`/wishlist/remove/${productId}`, {
            method: 'POST',
          });
          const data = await response.json();
          // Handle the response using SweetAlert
          Swal.fire({
            icon: 'success',
            title: 'Removed',
            text: data.message,
          });
        } catch (error) {
          console.error(error);
          // Display an error message using SweetAlert
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Error removing the product from your wishlist',
          });
        }
      }
    });
  });
});

}

      </script>
       <script>
        // Function to fetch the cart data and update the button text
async function updateCartButtonText(productId) {
    try {
        const response = await fetch('/cart');
        if (response.status === 200) {
            const cartData = await response.json();
            const isInCart = cartData.items.some(item => item.product._id === productId);

            const cartButtonText = document.getElementById('cartButtonText');
            if (isInCart) {
                cartButtonText.innerText = 'Item in Cart';
            } else {
                cartButtonText.innerText = 'Add to Cart';
            }
        }
    } catch (error) {
        console.error(error);
        // Handle errors
    }
}

// Function to add a product to the cart
async function addToCart(productId) {
    try {
        const response = await fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId }),
        });

        if (response.status === 201 || response.status === 203) {
            // Update the button text after adding to the cart
            updateCartButtonText(productId);
            alert('Product added to your cart.');
        } else if (response.status === 400) {
            alert('Product is already in your cart.');
        } else if (response.status === 404) {
            alert('Product not found.');
        } else {
            alert('An error occurred. Please try again later.');
        }
    } catch (error) {
        console.error(error);
        alert('An error occurred. Please try again later.');
    }
}

// Call updateCartButtonText function to initially set the button text
document.addEventListener('DOMContentLoaded', () => {
    const productId = 'product_id_here'; // Replace with the actual product ID
    updateCartButtonText(productId);
});

