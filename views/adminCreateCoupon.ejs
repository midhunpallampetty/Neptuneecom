       <script>
        // Function to handle form submission with AJAX
        async function createCoupon() {
          // Collect form data
          const formData = {
            code: document.getElementById('code').value,
            type: document.getElementById('type').value,
            discount: document.getElementById('discount').value,
            quantity: document.getElementById('quantity').value,
            expiryDate: document.getElementById('expiryDate').value,
          };
      
          try {
            // Send a POST request to the server to create a new coupon
            const response = await fetch('/admin/coupon', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData),
            });
      
            if (response.ok) {
                
              // Coupon creation successful, show success SweetAlert
              Swal.fire({
                title: 'Coupon Created!',
                text: 'The coupon has been created successfully.',
                icon: 'success',
              }).then(() => {
                // Optionally, you can redirect or perform other actions after user acknowledges the success
                // window.location.href = '/redirect-url';
              });
            } else {
              // Coupon creation failed, show error SweetAlert
              Swal.fire('Error', 'Failed to create the coupon. Please try again.', 'error');
            }
          } catch (error) {
            console.error('Error:', error);
            // Display error SweetAlert for unexpected errors
            Swal.fire('Error', 'An unexpected error occurred. Please try again later.', 'error');
          }
        }
      </script>
