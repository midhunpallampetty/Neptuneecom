  <script>
    function validateForm() {
      // Reset previous error messages
      clearErrorMessages();

      // Get form field values
      const name = document.getElementById("product_name").value;
      const description = document.querySelector(
        'textarea[name="description"]'
      ).value;

      // Regular expressions for validation
      const namePattern = /^[A-Za-z]+(\s[A-Za-z]+)*$/;
      const descriptionPattern = /^[A-Za-z\s.,!?'"-]{10,}$/;

      // Validate Category Name
      if (!name.match(namePattern) || name.length < 4) {
        showError(
          "nameError",
          "Invalid category name. It should be at least 4 characters, contain only letters, and not have numbers or special characters."
        );
        return false;
      }

      // Validate Description (if provided)
      if (
        description &&
        (!description.match(descriptionPattern) ||
          description.trim().length < 10)
      ) {
        showError(
          "descriptionError",
          "Description is invalid. It should have at least 10 characters and contain only letters and basic punctuation."
        );
        return false;
      }

      return true;
    }

    function showError(fieldId, errorMessage) {
      const errorSpan = document.getElementById(fieldId);
      errorSpan.innerText = errorMessage;

      // Use setTimeout to clear the error message after 5 seconds (5000 milliseconds)
      setTimeout(() => {
        errorSpan.innerText = "";
      }, 5000);
    }
    function clearErrorMessages() {
      const errorSpans = document.querySelectorAll(".error-text");
      errorSpans.forEach((span) => (span.innerText = ""));
    }
  </script>
