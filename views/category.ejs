<script>
  $(document).ready(function() {
    $('#search').on('input', function() {
      const searchTerm = $(this).val().toLowerCase();
      const $categoryRows = $('#category-list tr');

      $categoryRows.each(function() {
        const $categoryRow = $(this);
        const categoryName = $categoryRow.find('td:nth-child(2)').text().toLowerCase();
        const categoryDescription = $categoryRow.find('td:nth-child(3)').text().toLowerCase();

        if (categoryName.includes(searchTerm) || categoryDescription.includes(searchTerm)) {
          $categoryRow.show();
        } else {
          $categoryRow.hide();
        }
      });
    });
  });
</script>

