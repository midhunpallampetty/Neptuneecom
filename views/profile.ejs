    function validateForm() {
      // Reset previous error messages
      clearErrorMessages();
  
      // Get form field values
      const fullName = document.forms["enq"]["FullName"].value;
      const email = document.forms["enq"]["email"].value;
      const phone = document.forms["enq"]["Phone"].value;
      const houseName = document.forms["enq"]["HouseName"].value;
      const pincode = document.forms["enq"]["Pincode"].value;
  
      // Regular expressions for validation
      const fullNamePattern = /^[A-Z][a-zA-Z ]{3,}$/;
      const phonePattern = /^\d{10}$/;
      const emailPattern = /^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;
      const pincodePattern = /^\d{6}$/;
      const notAllZeroesPattern = /^(?!0+$)\d+$/;
      const houseNamePattern = /^[A-Za-z]+$/;

  
      // Validate Full Name
      if (!fullName.match(fullNamePattern)) {
        showError("fullName-error", "Full Name is invalid. It should start with a capital letter and have at least 4 characters.");
        return false;
      }
  
      // Validate Email
      if (!email.match(emailPattern)) {
        showError("email-error", "Email is invalid.");
        return false;
      }
  
      // Validate Phone Number
      if (!phone.match(phonePattern) || !phone.match(notAllZeroesPattern)) {
        showError("phone-error", "Phone Number is invalid. It should be 10 digits and not all zeroes.");
        return false;
      }
  
      // Validate House Name
      if (!houseName.match(houseNamePattern)) {
        showError("houseName-error", "House Name is invalid. It should consist of exactly 6 digits.");
        return false;
      }
  
      // Validate Pincode
      if (!pincode.match(pincodePattern) || !pincode.match(notAllZeroesPattern)) {
        showError("pincode-error", "Pincode is invalid. It should be 6 digits and not all zeroes.");
        return false;
      }
  
      return true;
    }
  
    function showError(fieldId, errorMessage) {
      const errorSpan = document.getElementById(fieldId);
      errorSpan.innerText = errorMessage;
      setTimeout(() => {
        errorSpan.innerText = "";
      }, 5000);
    }
  
    function clearErrorMessages() {
      const errorSpans = document.querySelectorAll(".error-message");
      errorSpans.forEach((span) => (span.innerText = ""));
    }
  </script>
  
       
  
