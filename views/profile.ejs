<!-- profile.ejs -->
<html>
  <head>
    <title>User Profile</title>
  </head>
  <body>
    <h1>User Profile</h1>
    
    <!-- Display User Profile Information -->
    <h2>User Information</h2>
    <p>User Name: <%= user.name %></p>
    <p>Email: <%= user.email %></p>
    <!-- Add more user information here -->
    
    <!-- Add Address Section -->
    <h2>Add Address</h2>
    <form action="/api/profiles/<%= user._id %>/addresses" method="POST">
      <label for="address">Address:</label>
      <input type="text" id="address" name="address" required>
      <!-- Add more address fields if needed -->
      <button type="submit">Add Address</button>
    </form>
    
    <!-- Add Image Section -->
    <h2>Add Image</h2>
    <form action="/api/profiles/<%= user._id %>/images" method="POST">
      <label for="imageUrl">Image URL:</label>
      <input type="text" id="imageUrl" name="imageUrl" required>
      <button type="submit">Add Image</button>
    </form>
    
    <!-- Display Addresses and Images -->
    <h2>Addresses</h2>
    <ul>
      <% user.profile.addresses.forEach(address => { %>
        <li><%= address %></li>
      <% }); %>
    </ul>
    
    <h2>Images</h2>
    <ul>
      <% user.profile.images.forEach(image => { %>
        <li><img src="<%= image %>" alt="User Image" width="100" height="100"></li>
      <% }); %>
    </ul>
  </body>
</html>
